@using TodoList.Models.Enums

<div class="card mb-4">
    <div class="card-body">
        <div class="row align-items-end">
            <div class="col-md-4 mb-2 mb-md-0">
                <label for="FilterStatus" class="form-label">ğŸ” Filter by Status</label>
                <select class="form-select" id="FilterStatus" value="@Filter"
                        @onchange="OnFilterChanged">
                    <option value="@FilterOption.All">ğŸ“‹ All (@TotalCount)</option>
                    <option value="@FilterOption.Active">â³ Active (@ActiveCount)</option>
                    <option value="@FilterOption.Completed">âœ… Completed (@CompletedCount)</option>
                </select>
            </div>
            <div class="col-md-4 mb-2 mb-md-0">
                <label for="SortBy" class="form-label">ğŸ“Š Sort by</label>
                <select class="form-select" id="SortBy" value="@Sort"
                        @onchange="OnSortChanged">
                    <option value="@SortOption.CreatedDate">ğŸ“… Created Date</option>
                    <option value="@SortOption.Priority">ğŸ¯ Priority</option>
                    <option value="@SortOption.Status">ğŸ“Œ Status</option>
                </select>
            </div>
            <div class="col-md-4">
                <div class="text-muted">
                    ğŸ‘ï¸ Showing <strong>@FilteredCount</strong> of <strong>@TotalCount</strong> items
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public FilterOption Filter { get; set; }
    [Parameter] public SortOption Sort { get; set; }
    [Parameter] public int TotalCount { get; set; }
    [Parameter] public int ActiveCount { get; set; }
    [Parameter] public int CompletedCount { get; set; }
    [Parameter] public int FilteredCount { get; set; }
    [Parameter] public EventCallback<FilterOption> FilterChanged { get; set; }
    [Parameter] public EventCallback<SortOption> SortChanged { get; set; }

    private async Task OnFilterChanged(ChangeEventArgs e)
    {
        if (Enum.TryParse<FilterOption>(e.Value?.ToString(), out var filter))
            await FilterChanged.InvokeAsync(filter);
    }

    private async Task OnSortChanged(ChangeEventArgs e)
    {
        if (Enum.TryParse<SortOption>(e.Value?.ToString(), out var sort))
            await SortChanged.InvokeAsync(sort);
    }
}
